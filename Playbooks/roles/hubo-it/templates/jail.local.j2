# templates/jail.local.j2

[DEFAULT]
# Ban settings
bantime = {{ fail2ban_bantime }}
findtime = {{ fail2ban_findtime }}
maxretry = {{ fail2ban_maxretry }}

# Logging
loglevel = {{ fail2ban_loglevel }}
logtarget = {{ fail2ban_logtarget }}

# Socket
socket = {{ fail2ban_socket }}

# Jail definitions
[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
maxretry = {{ fail2ban_maxretry }}
